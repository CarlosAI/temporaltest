<div class="container-xl">
  <br>
  <br>
  <h3>
  Nombre de la empresa
  <small class="text-muted">Folios</small>
</h3>
  <br>

  <div class="container-xl">
    <div class="row align-items-start">
      <div class="col">
        <%= link_to "Registar nuevo Folio", new_folio_abuso_path, class:"btn btn-info" %>
      </div>
      <div class="col">
        <%= form_for :folio_abuso, method: :get do |f| %>  
          <input type="text" name="filtro" id="filtro" value="" placeholder="Buscar" bind="query" class="form-control">
        <% end %>
      </div>
      <div class="col">
        <button class="btn btn-warning">Buscar</button>
      </div>
    </div>
  </div>
  <br>
  <div id="folio_abusos">
    <table class="table table-success table-striped table-hover table-borderless">
      <thead>
        <tr>
          <th scope="col">No. Folio</th>
          <th scope="col">Cliente</th>
          <th scope="col">Fecha</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @folio_abusos.each do |folio_abuso| %>
          <tr>
            <th scope="row"><%= folio_abuso.folio %> </th>
            <td><%= folio_abuso.cliente %></td>
            <td><%= folio_abuso.fecha %></td>
            <td>
              <!-- Example single danger button -->
              <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                  Accion
                </button>
                <ul class="dropdown-menu">
                  <%= link_to 'Ver', folio_abuso, class:"dropdown-item" %>
                  <li><a class="dropdown-item" href="<%= edit_folio_abuso_path(folio_abuso) %>">Editar</a></li>
                  <%= link_to 'Eliminar', folio_abuso , method: :delete, data: { confirm: 'Estas seguro?' }, class:"dropdown-item"%>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @folio_abusos %>
  </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <img src="..." class="rounded me-2" alt="...">
      <strong class="me-auto">Bootstrap</strong>
      <small>11 mins ago</small>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      Hello, world! This is a toast message.
    </div>
  </div>
</div>